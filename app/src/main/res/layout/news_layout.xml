<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/section_title"
            style="@style/Section_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Section name" />

        <TextView
            android:id="@+id/publication_date"
            style="@style/publication_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="publication date" />

        <TextView
            android:id="@+id/article_title"
            style="@style/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="title" />

        <TextView
            android:id="@+id/contributor"
            style="@style/contributor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="contributor" />

    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:contentDescription="@string/icon"
        android:layout_weight="0.5"
        android:src="@drawable/ic_keyboard_arrow_right_white_24dp" />

</LinearLayout>


